<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CryptaText.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CryptaText.Resources.Strings">

    <Grid
        Padding="20"
        RowDefinitions="Auto, *, Auto, Auto, *, Auto"
        RowSpacing="10">

        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Button
                x:Name="LangToggleBtn"
                Clicked="ToggleLanguageClicked"
                Text="FA"
                WidthRequest="50" />
            <Picker
                x:Name="ThemePicker"
                SelectedIndexChanged="ThemePickerChanged"
                WidthRequest="120" />
        </HorizontalStackLayout>

        <Border Grid.Row="1">
            <Editor x:Name="InputText" />
        </Border>

        <HorizontalStackLayout
            Grid.Row="2"
            HorizontalOptions="End"
            Spacing="10">
            <Button
                Clicked="PasteInputClicked"
                Text="📋"
                WidthRequest="40" />
            <Button
                Clicked="ClearInputClicked"
                Text="🧹"
                WidthRequest="40" />
        </HorizontalStackLayout>

        <Grid Grid.Row="3" ColumnDefinitions="*, Auto, Auto, Auto ">
            <Entry
                x:Name="KeyText"
                Grid.Column="0"
                IsPassword="True"
                Placeholder="{x:Static local:AppStrings.KeyPlaceholder}" />
            <Button
                x:Name="ToggleKeyBtn"
                Grid.Column="1"
                Margin="8,0,0,0"
                Clicked="ToggleKeyClicked"
                Text="👁"
                WidthRequest="40" />
            <Button
                x:Name="EncryptBtn"
                Grid.Column="2"
                Margin="8,0,0,0"
                Clicked="EncryptClicked" />
            <Button
                x:Name="DecryptBtn"
                Grid.Column="3"
                Margin="8,0,0,0"
                Clicked="DecryptClicked" />
        </Grid>

        <Border Grid.Row="4">
            <Editor x:Name="OutputText" IsReadOnly="True" />
        </Border>

        <HorizontalStackLayout
            Grid.Row="5"
            HorizontalOptions="End"
            Spacing="10">
            <Button
                Clicked="CopyOutputClicked"
                Text="📄"
                WidthRequest="40" />
            <Button
                Clicked="ClearOutputClicked"
                Text="🧹"
                WidthRequest="40" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>

